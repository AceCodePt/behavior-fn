{
	"name": "behavior-fn",
	"description": "Copy-paste behavior mixins for Web Components - Own your code, not your dependencies",
	"version": "0.1.1",
	"type": "module",
	"bin": {
		"behavior-fn": "./dist/index.js"
	},
	"files": [
		"dist",
		"registry"
	],
	"scripts": {
		"build": "tsup index.ts --format esm --clean --external jiti --onSuccess \"cp -r registry dist/ && chmod +x dist/index.js\"",
		"build:cdn": "tsx scripts/build-cdn.ts",
		"build:all": "pnpm build && pnpm build:cdn",
		"test": "vitest run",
		"prepublishOnly": "pnpm build:all && pnpm test"
	},
	"keywords": [
		"web-components",
		"mixin",
		"behavior",
		"typescript",
		"headless-ui",
		"johf",
		"declarative",
		"copy-paste",
		"no-framework",
		"vanilla-js",
		"custom-elements",
		"zod",
		"valibot",
		"typebox"
	],
	"author": "Sagi Carmel (https://github.com/AceCodePt)",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AceCodePt/behavior-fn.git"
	},
	"bugs": {
		"url": "https://github.com/AceCodePt/behavior-fn/issues"
	},
	"homepage": "https://github.com/AceCodePt/behavior-fn#readme",
	"devDependencies": {
		"@sinclair/typebox": "^0.34.48",
		"@types/node": "^25.2.3",
		"@types/prompts": "^2.4.9",
		"auto-wc": "^0.1.4",
		"esbuild": "^0.27.3",
		"jsdom": "^28.1.0",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vite-tsconfig-paths": "^6.1.1",
		"vitest": "^4.0.18"
	},
	"dependencies": {
		"@standard-schema/spec": "^1.1.0",
		"jiti": "^2.6.1",
		"prompts": "^2.4.2"
	}
}
